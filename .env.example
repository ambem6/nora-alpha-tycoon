# --------------------------------------------------------
# APPLICATION SETTINGS
# --------------------------------------------------------
NODE_ENV="development" # development | production | test
PORT=3000
API_PREFIX="/api/v1"
CORS_ORIGIN="http://localhost:5173" # Vite Frontend URL

# --------------------------------------------------------
# TELEGRAM INTEGRATION
# --------------------------------------------------------
# From BotFather
TELEGRAM_BOT_TOKEN="123456789:ABCdefGHIjklMNOpqRSTuvwXYZ"
# Time window to allow for initData validity (seconds)
TELEGRAM_AUTH_TTL=300

ADMIN_TON_WALLET="UQC_your_wallet_address"
TONAPI_KEY="your_tonapi_io_key" # Free tier available

# --------------------------------------------------------
# SECURITY & SESSION
# --------------------------------------------------------
# Used to sign internal short-lived session tokens binding initData to the socket
SESSION_SECRET="super_long_random_string_min_32_chars"
# Rate limiting: Requests per window
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------------------------
# DATABASE (PRISMA)
# --------------------------------------------------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://nora_user:secure_password@localhost:5432/nora_tycoon?schema=public&connection_limit=20&pool_timeout=0"

# --------------------------------------------------------
# REDIS (CACHE & QUEUE)
# --------------------------------------------------------
# Format: redis://:PASSWORD@HOST:PORT/DB_INDEX
REDIS_URL="redis://:secure_redis_password@localhost:6379/0"

# --------------------------------------------------------
# RUST CORE ENGINE FLAGS
# --------------------------------------------------------
# Logging level for the NAPI-RS bridge
RUST_LOG="info" # debug | info | warn | error
# Max time (ms) to allow the engine to reconcile offline progress
MAX_OFFLINE_RECONCILIATION_MS=86400000 # 24 Hours
# Anti-Cheat: Max allowed deviation in client vs server timestamps (ms)
MAX_CLOCK_SKEW_MS=5000

# --------------------------------------------------------
# FEATURE FLAGS (Toggle for Staged Rollouts)
# --------------------------------------------------------
ENABLE_LAB_MODULES="false"
ENABLE_REAL_MONEY_TRADING="false" # Strictly false for TWA compliance
ENABLE_TELEMETRY="true"
